{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "18.2.0",
  "include": ["src/**/*", "@types/*.d.ts"],
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
